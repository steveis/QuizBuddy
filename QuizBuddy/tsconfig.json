{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "noImplicitAny": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}